@model Usuario
@{
    ViewData["Title"] = "Signup";
}

<h1 class="h3 mb-3 font-weight-normal">Cadastro</h1>
<h1 class="h6 mb-3 font-weight-normal">@ViewBag.mensagemc</h1>
<form method="POST">
    <div class="form-group">
        <label asp-for="Login">Login:</label>
        <input asp-for="Login" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Senha">Senha:</label>
        <input asp-for="Senha" type="password" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Nascimento">Data de nascimento:</label>
        <input asp-for="Nascimento" type="text" placeholder="MM/DD/YYYY" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Tipo">Tipo:</label>
        <select asp-for="Tipo" class="form-control">
            <option value=0>Administrador</option>
            <option value=1 selected>Colaborador</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-primary"/>
    </div>
</form>
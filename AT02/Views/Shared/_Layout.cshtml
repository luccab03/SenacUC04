@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Destino Certo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/dropdown.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Destino Certo</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Vitrine">Vitrine</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contato">Contato</a>
                    </li>
                    @if (Context.Session.GetInt32("tipoUsuario") == 1 || Context.Session.GetInt32("tipoUsuario") == 0)
                    {
                        <div class="dropdown nav-item">
                            <a href="#" class="dropbtn nav-link text-dark">Pacotes</a>
                            <div class="dropdown-content">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Pacote" asp-action="Cadastrar">Cadastrar Pacotes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Pacote" asp-action="Alterar">Alterar Pacotes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Pacote" asp-action="Deletar">Deletar Pacotes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Pacote" asp-action="Listar">Listar Pacotes</a>
                                </li>
                            </div>
                        </div>
                    }
                    @if (Context.Session.GetInt32("tipoUsuario") == 0)
                    {
                        <div class="dropdown nav-item">
                            <a href="#" class="dropbtn nav-link text-dark">Usuários</a>
                            <div class="dropdown-content">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Cadastrar">Cadastrar Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Alterar">Alterar Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Deletar">Deletar Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Lista">Listar Usuarios</a>
                                </li>
                            </div>
                        </div>
                    }
                </ul>
            </div>
            @if (Context.Session.GetInt32("idUsuario") != null)
            {
                <span class="text-dark pr-1">Bem Vindo, @Context.Session.GetString("nomeUsuario") -</span>
                <a class="text-dark" asp-area="" asp-controller="Usuario" asp-action="Logout">Sair</a>
            }
            else
            {
                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Login">Login</a>
            }
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - Destino Certo - Feito por Lucca Bringhenti
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>